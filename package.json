{
  "name": "flashdict",
  "version": "1.0.1",
  "description": "FlashDict - Look up words and create Anki flashcards",
  "scripts": {
    "build": "node scripts/build.js",
    "build:tsc": "tsc --build",
    "build:watch": "tsc --watch",
    "build:clean": "tsc --build --clean",
    "watch": "npm run build:watch",
    "clean": "rm -rf dist && rm -rf coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit --pretty"
  },
  "keywords": [
    "chrome-extension",
    "dictionary",
    "anki"
  ],
  "author": "Zhenyu Huang",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.0",
    "esbuild": "^0.27.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^24.35.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dompurify": "^3.0.8",
    "zod": "^3.22.0"
  }
}
